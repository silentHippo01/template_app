{
    "compilerOptions": {
        "outDir": "./dist/",
        "noImplicitAny": true,
        "module": "es6",
        "target": "es5",
        "jsx": "react-jsx",
        "allowJs": true,
        "moduleResolution": "node",
        "baseUrl": ".",
        "paths": {
            "*": ["./src/*"]
        },
        "esModuleInterop": true, // делает нормальные импорты
        "allowSyntheticDefaultImports": true, // делает нормальные импорты
    },
    "ts-node": {
        "compilerOptions": {
            "module": "CommonJS"
        }
    },
}